	},
	"devDependencies": {
		"@eslint/js": "^9.39.2",
		"@tsconfig/node22": "^22.0.5",
		"@types/express": "^5.0.6",
		"@types/node": "^25.2.3",
		"eslint": "^9.39.2",
		"eslint-plugin-perfectionist": "^5.5.0",
		"prettier": "^3.8.1",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.55.0"
	}
